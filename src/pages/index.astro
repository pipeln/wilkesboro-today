    slug: 'superintendent-byrd-passes-away',
    image: '/images/default-hero.jpg'
  },
  {
    id: '2',
    title: 'County Commissioners Meeting Rescheduled to March 5',
    summary: 'The Wilkes County Board of Commissioners meeting has been moved from March 3 to Thursday, March 5, 2026 at 5:00 PM.',
    category: 'Government',
    source: 'Wilkes County Gov',
    date: '2026-02-26',
    slug: 'commissioners-meeting-march-5',
    image: '/images/default-thumbnail.jpg'
  },
  {
    id: '3',
    title: 'Wilkesboro Comic Con Returns February 28',
    summary: 'The annual Wilkesboro Comic Con is back this Saturday with vendors, cosplay, and family-friendly activities.',
    category: 'Events',
    source: 'wilkescomiccon.com',
    date: '2026-02-26',
    slug: 'wilkesboro-comic-con-feb-28',
    image: '/images/default-thumbnail.jpg'
  },
  {
    id: '4',
    title: 'NASCAR Returning to North Wilkesboro Speedway',
    summary: 'The NASCAR Craftsman Truck Series and Cup Series will race at North Wilkesboro Speedway on July 17-19, 2026.',
    category: 'Sports',
    source: 'North Wilkesboro Speedway',
    date: '2026-02-26',
    slug: 'nascar-returns-july-2026',
    image: '/images/default-thumbnail.jpg'
  },
  {
    id: '5',
    title: 'Brushy Mountain Apple Festival Set for October 3',
    summary: 'One of the largest one-day arts and crafts festivals in the Southeast returns to downtown North Wilkesboro.',
    category: 'Events',
    source: 'Brushy Mountain Ruritan',
    date: '2026-02-26',
    slug: 'apple-festival-october-3',
    image: '/images/default-thumbnail.jpg'
  },
  {
    id: '6',
    title: 'Wilkes County Agricultural Fair October 1-4',
    summary: 'Four days of rides, exhibits, livestock shows, and family fun at the Wilkes County Agricultural Fairgrounds.',
    category: 'Events',
    source: 'Wilkes County Fair',
    date: '2026-02-26',
    slug: 'agricultural-fair-october-2026',
    image: '/images/default-thumbnail.jpg'
  }
];

// Demo events
const demoEvents = [
  {
    id: '1',
    title: 'Wilkes County Board of Commissioners Meeting',
    date: '2026-03-05',
    time: '5:00 PM',
    venue: '110 North Street, Wilkesboro',
    city: 'Wilkesboro'
  },
  {
    id: '2',
    title: 'NC Primary Election Day',
    date: '2026-03-03',
    time: '6:30 AM - 7:30 PM',
    venue: 'Various polling locations',
    city: 'Wilkes County'
  },
  {
    id: '3',
    title: 'Wilkesboro Comic Con',
    date: '2026-02-28',
    time: '10:00 AM - 6:00 PM',
    venue: 'Downtown North Wilkesboro',
    city: 'North Wilkesboro'
  },
  {
    id: '4',
    title: 'NASCAR Craftsman Truck Series',
    date: '2026-07-18',
    time: '12:30 PM',
    venue: 'North Wilkesboro Speedway',
    city: 'North Wilkesboro'
  },
  {
    id: '5',
    title: 'Brushy Mountain Apple Festival',
    date: '2026-10-03',
    time: '9:00 AM - 5:00 PM',
    venue: 'Downtown North Wilkesboro',
    city: 'North Wilkesboro'
  }
];

const featuredArticle = demoArticles[0];
const latestNews = demoArticles.slice(1, 4);
const events = demoEvents;
---

<Layout>
  <!-- SEO -->
  <fragment slot="head">
    <title>Wilkesboro Today - Local News, Events & Resources for Wilkes County, NC</title>
    <meta name="description" content="Your trusted source for local news, events, jobs, weather, and community resources in Wilkes County, North Carolina.">
  </fragment>

  <!-- Hero Section with Weather -->
  <section class="bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        
        <!-- Featured Story -->
        <div class="lg:col-span-2">
          <a href={`/news/${featuredArticle.slug}`} class="group block">
            <article class="bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-md transition">
              <div class="aspect-video bg-gray-200 relative overflow-hidden">
                <img 
                  src={featuredArticle.image} 
                  alt={featuredArticle.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition duration-500"
                />
                <span class="absolute top-4 left-4 bg-red-600 text-white text-xs font-bold px-3 py-1 rounded-full">
                  {featuredArticle.category}
                </span>
              </div>
              
              <div class="p-6">
                <h1 class="text-2xl md:text-3xl font-bold text-gray-900 mb-3 group-hover:text-blue-700 transition">
                  {featuredArticle.title}
                </h1>
                <p class="text-gray-600 mb-4 line-clamp-3">
                  {featuredArticle.summary}
                </p>
                
                <div class="flex items-center text-sm text-gray-500">
                  <span>{featuredArticle.source}</span>
                  <span class="mx-2">•</span>
                  <span>{new Date(featuredArticle.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}</span>
                </div>
              </div>
            </article>
          </a>
        </div>

        <!-- Weather & Top Stories -->
        <div class="space-y-6">
          <WeatherWidget />
          
          <div class="bg-white rounded-xl shadow-sm p-6">
            <h2 class="text-lg font-bold text-gray-900 flex items-center mb-4">
              <span class="w-1 h-6 bg-blue-700 mr-3 rounded"></span>
              Top Stories
            </h2>

            {latestNews.map(article => (
              <a href={`/news/${article.slug}`} class="group block py-3 border-b border-gray-100 last:border-0">
                <span class="text-xs font-semibold text-blue-700 uppercase">{article.category}</span>
                <h3 class="font-medium text-gray-900 group-hover:text-blue-700 transition line-clamp-2">
                  {article.title}
                </h3>
                <div class="flex items-center text-xs text-gray-500 mt-1">
                  <span>{article.source}</span>
                  <span class="mx-1">•</span>
                  <span>{new Date(article.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}</span>
                </div>
              </a>
            ))}

            <a href="/news" class="block text-center text-blue-700 font-medium hover:underline mt-4">
              View All News →
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Area News Feed (Local + State + Regional) -->
  <section class="py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2">
          <AreaNewsFeed />
        </div>
        <div>
          <JobsBoard />
        </div>
      </div>
    </div>
  </section>

  <!-- Latest News Grid -->
  <section class="bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-bold text-gray-900 flex items-center">
          <span class="w-1 h-8 bg-blue-700 mr-3 rounded"></span>
          Latest News
        </h2>
        
        <div class="flex space-x-2">
          <button class="px-4 py-2 bg-blue-700 text-white rounded-lg text-sm font-medium">All</button>
          <button class="px-4 py-2 bg-white text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-100">Local</button>
          <button class="px-4 py-2 bg-white text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-100">State</button>
          <button class="px-4 py-2 bg-white text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-100">Regional</button>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {demoArticles.slice(0, 6).map(article => (
          <a href={`/news/${article.slug}`} class="group">
            <article class="bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-md transition h-full flex flex-col">
              <div class="aspect-video bg-gray-100 relative overflow-hidden">
                <img 
                  src={article.image} 
                  alt={article.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition duration-500"
                />
                <span class="absolute top-3 left-3 bg-blue-700/90 text-white text-xs font-bold px-2 py-1 rounded">
                  {article.category}
                </span>
              </div>
              
              <div class="p-5 flex-1 flex flex-col">
                <h3 class="font-bold text-lg text-gray-900 mb-2 group-hover:text-blue-700 transition line-clamp-2">
                  {article.title}
                </h3>
                <p class="text-gray-600 text-sm line-clamp-2 mb-4 flex-1">
                  {article.summary}
                </p>
                
                <div class="flex items-center justify-between text-xs text-gray-500 pt-4 border-t border-gray-100">
                  <span>{article.source}</span>
                  <span>{new Date(article.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}</span>
                </div>
              </div>
            </article>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Events & Feeds Split -->
  <section class="py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        
        <!-- Upcoming Events -->
        <div>
          <h2 class="text-2xl font-bold text-gray-900 flex items-center mb-6">
            <span class="w-1 h-8 bg-amber-500 mr-3 rounded"></span>
            Upcoming Events
          </h2>

          <div class="space-y-4">
            {events.map(event => (
              <div class="bg-white rounded-lg p-4 shadow-sm flex items-start space-x-4">
                <div class="flex-shrink-0 w-16 text-center">
                  <div class="bg-blue-700 text-white rounded-t-lg py-1 text-xs font-bold uppercase">
                    {new Date(event.date).toLocaleDateString('en-US', { month: 'short' })}
                  </div>
                  <div class="bg-gray-100 rounded-b-lg py-2">
                    <span class="text-2xl font-bold text-gray-900">
                      {new Date(event.date).getDate()}
                    </span>
                  </div>
                </div>
                
                <div class="flex-1">
                  <h3 class="font-semibold text-gray-900">{event.title}</h3>
                  <p class="text-sm text-gray-600 mt-1">{event.time} • {event.venue}</p>
                  <p class="text-sm text-gray-500 mt-1">{event.city}</p>
                </div>
              </div>
            ))}
          </div>

          <a href="/events" class="block text-center text-blue-700 font-medium hover:underline mt-6">
            View All Events →
          </a>
        </div>

        <!-- RSS Feeds Directory -->
        <div>
          <FeedsDirectory />
        </div>
      </div>
    </div>
  </section>

  <!-- Resources by County -->
  <section class="bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-gray-900 flex items-center mb-8">
        <span class="w-1 h-8 bg-green-500 mr-3 rounded"></span>
        Community Resources by County
      </h2>
      
      <ResourcesByCounty />
    </div>
  </section>

  <!-- Submit News CTA -->
  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Have a news tip or event?</h2>
      <p class="text-lg text-gray-600 mb-8">
        Help keep our community informed. Submit news tips, events, jobs, or resources for publication.
      </p>
      
      <a 
        href="/submit" 
        class="inline-flex items-center px-8 py-4 bg-blue-700 text-white font-semibold rounded-lg hover:bg-blue-800 transition shadow-lg hover:shadow-xl"
      >
        Submit News or Event
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
    </div>
  </section>
</Layout>
