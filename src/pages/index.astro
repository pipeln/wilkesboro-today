---
// Homepage - Demo Ready Version
import Layout from '../layouts/Layout.astro';
import WeatherWidget from '../components/WeatherWidget.astro';
import JobsBoard from '../components/JobsBoard.astro';
import AreaNewsFeed from '../components/AreaNewsFeed.astro';
import FeedsDirectory from '../components/FeedsDirectory.astro';
import ResourcesByCounty from '../components/ResourcesByCounty.astro';

// Demo articles for launch
const demoArticles = [
  {
    id: '1',
