  <body class="bg-white text-gray-900 font-sans antialiased">
    <!-- Breaking News Bar -->
    <div class="bg-secondary text-white py-2 px-4 text-sm">
      <div class="max-w-7xl mx-auto flex items-center">
        <span class="font-bold mr-3">BREAKING:</span>
