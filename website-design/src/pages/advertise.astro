---
// Advertising / Media Kit Page
import Layout from '../layouts/Layout.astro';
import AdBanner from '../components/AdBanner.astro';
---

<Layout>
  <fragment slot="head">
    <title>Advertise with Wilkesboro Today - Reach Wilkes County</title>
    <meta name="description" content="Advertise your business to Wilkes County residents. View our media kit, ad rates, and audience demographics.">
  </fragment>

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-900 to-blue-700 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        Advertise with Wilkesboro Today
      </h1>
      <p class="text-xl text-blue-100 max-w-3xl mx-auto mb-8">
        Reach thousands of engaged Wilkes County residents with your message. 
        From local businesses to regional brands, we help you connect with the community.
      </p>
      <a 
        href="mailto:advertise@wilkesborotoday.com" 
        class="inline-flex items-center px-8 py-4 bg-amber-500 text-blue-900 font-bold rounded-lg hover:bg-amber-400 transition shadow-lg"
      >
        Get Started Today
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
    </div>
  </section>

  <!-- Why Advertise With Us -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">
        Why Advertise With Us?
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white rounded-xl p-8 shadow-sm text-center">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Local Audience</h3>
          <p class="text-gray-600">
            Reach Wilkes County residents who care about local news, events, and community happenings.
          </p>
        </div>
        
        <div class="bg-white rounded-xl p-8 shadow-sm text-center">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Trusted Platform</h3>
          <p class="text-gray-600">
            Your brand appears alongside reliable local news that our readers trust and engage with daily.
          </p>
        </div>
        
        <div class="bg-white rounded-xl p-8 shadow-sm text-center">
          <div class="w-16 h-16 bg-amber-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-amber-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Flexible Pricing</h3>
          <p class="text-gray-600">
            Options for every budget, from small local businesses to larger regional campaigns.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Ad Sizes & Rates -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center text-gray-900 mb-4">
        Ad Placements & Rates
      </h2>
      <p class="text-center text-gray-600 mb-12 max-w-3xl mx-auto">
        Choose the perfect ad size and placement to reach your target audience. 
        All ads are responsive and display beautifully on desktop and mobile.
      </p>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Leaderboard -->
        <div class="bg-white rounded-xl shadow-sm overflow-hidden">
          <div class="p-6 border-b border-gray-100">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-xl font-bold text-gray-900">Leaderboard</h3>
              <span class="text-2xl font-bold text-blue-700">$500<span class="text-sm text-gray-500 font-normal">/mo</span></span>
            </div>
            <p class="text-gray-600 text-sm mb-4">728 × 90 pixels • Header placement</p>
            <AdBanner size="leaderboard" className="mx-auto" />
          </div>
          <div class="p-6 bg-gray-50">
            <ul class="space-y-2 text-sm text-gray-600">
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Premium header visibility
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                High click-through rate
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Appears on all pages
              </li>
            </ul>
          </div>
        </div>

        <!-- Medium Rectangle -->
        <div class="bg-white rounded-xl shadow-sm overflow-hidden">
          <div class="p-6 border-b border-gray-100">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-xl font-bold text-gray-900">Medium Rectangle</h3>
              <span class="text-2xl font-bold text-blue-700">$250<span class="text-sm text-gray-500 font-normal">/mo</span></span>
            </div>
            <p class="text-gray-600 text-sm mb-4">300 × 250 pixels • Sidebar/content</p>
            <AdBanner size="medium-rectangle" className="mx-auto" />
          </div>
          <div class="p-6 bg-gray-50">
            <ul class="space-y-2 text-sm text-gray-600">
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Sidebar placement
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Great for product showcases
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Mobile responsive
              </li>
            </ul>
          </div>
        </div>

        <!-- Skyscraper -->
        <div class="bg-white rounded-xl shadow-sm overflow-hidden">
          <div class="p-6 border-b border-gray-100">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-xl font-bold text-gray-900">Wide Skyscraper</h3>
              <span class="text-2xl font-bold text-blue-700">$300<span class="text-sm text-gray-500 font-normal">/mo</span></span>
            </div>
            <p class="text-gray-600 text-sm mb-4">160 × 600 pixels • Tall sidebar</p>
            <AdBanner size="skyscraper" className="mx-auto" />
          </div>
          <div class="p-6 bg-gray-50">
            <ul class="space-y-2 text-sm text-gray-600">
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Maximum vertical visibility
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Stays visible while scrolling
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Perfect for branding
              </li>
            </ul>
          </div>
        </div>

        <!-- Half Page -->
        <div class="bg-white rounded-xl shadow-sm overflow-hidden">
          <div class="p-6 border-b border-gray-100">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-xl font-bold text-gray-900">Half Page</h3>
              <span class="text-2xl font-bold text-blue-700">$400<span class="text-sm text-gray-500 font-normal">/mo</span></span>
            </div>
            <p class="text-gray-600 text-sm mb-4">300 × 600 pixels • Large sidebar</p>
            <AdBanner size="half-page" className="mx-auto" />
          </div>
          <div class="p-6 bg-gray-50">
            <ul class="space-y-2 text-sm text-gray-600">
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Large format impact
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Great for detailed messaging
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                High engagement rates
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- More Sizes -->
      <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="bg-white rounded-xl p-6 shadow-sm flex items-center justify-between">
          <div>
            <h4 class="font-bold text-gray-900">Large Rectangle</h4>
            <p class="text-sm text-gray-600">336 × 280 pixels</p>
          </div>
          <span class="text-xl font-bold text-blue-700">$275<span class="text-sm text-gray-500 font-normal">/mo</span></span>
        </div>
        
        <div class="bg-white rounded-xl p-6 shadow-sm flex items-center justify-between">
          <div>
            <h4 class="font-bold text-gray-900">Billboard</h4>
            <p class="text-sm text-gray-600">970 × 250 pixels • Premium</p>
          </div>
          <span class="text-xl font-bold text-blue-700">$600<span class="text-sm text-gray-500 font-normal">/mo</span></span>
        </div>
      </div>
    </div>
  </section>

  <!-- Audience Stats -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">
        Our Audience
      </h2>
      
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-4xl font-bold text-blue-700 mb-2">10K+</div>
          <div class="text-gray-600">Monthly Visitors</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-blue-700 mb-2">65%</div>
          <div class="text-gray-600">Local Wilkes County</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-blue-700 mb-2">45%</div>
          <div class="text-gray-600">Mobile Users</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-blue-700 mb-2">3:30</div>
          <div class="text-gray-600">Avg. Time on Site</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact CTA -->
  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">
        Ready to Reach Wilkes County?
      </h2>
      <p class="text-lg text-gray-600 mb-8">
        Let's discuss how we can help your business connect with our engaged local audience. 
        Custom packages and long-term rates available.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="mailto:advertise@wilkesborotoday.com" 
          class="inline-flex items-center justify-center px-8 py-4 bg-blue-700 text-white font-bold rounded-lg hover:bg-blue-800 transition shadow-lg"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          Email Us
        </a>
        <a 
          href="tel:+13365551234" 
          class="inline-flex items-center justify-center px-8 py-4 bg-white text-blue-700 font-bold rounded-lg border-2 border-blue-700 hover:bg-blue-50 transition"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          Call (336) 555-1234
        </a>
      </div>
      
      <p class="mt-6 text-sm text-gray-500">
        advertise@wilkesborotoday.com
      </p>
    </div>
  </section>
</Layout>
